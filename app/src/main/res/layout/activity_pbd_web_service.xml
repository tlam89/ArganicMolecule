<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PBD_WebService_Activity">

    <LinearLayout
        android:id="@+id/linearLayout_Control_Panel"
        android:layout_width="421dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView_Search_By"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_by" />

        <LinearLayout
            android:id="@+id/linearLayout_Horizontal_Buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/button_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/id"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/button_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/name"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/button_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/date"
                style="?android:attr/buttonBarButtonStyle" />
        </LinearLayout>

        <EditText
            android:id="@+id/editText_Enter_ID_Name_Date"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:autofillHints="Enter "
            android:hint="@string/enter_id_name_date"
            android:inputType="date" />

    </LinearLayout>

    <Button
        android:id="@+id/button_Molecule_Summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/molecule_summary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_Control_Panel" />

    <Button
        android:id="@+id/button_Like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="256dp"
        android:text="@string/like"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Molecule_Summary" />

    <TextView
        android:id="@+id/textView_JSON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/json_output"
        app:layout_constraintBottom_toTopOf="@+id/button_Like"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Molecule_Summary" />

</androidx.constraintlayout.widget.ConstraintLayout>